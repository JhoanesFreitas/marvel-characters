<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelCharacters" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/Theme.MarvelCharacters.ActionBarStyle</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="Theme.MarvelCharacters.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/white</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Theme.MarvelCharacters.ImageRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.MarvelCharacters.ImageRounded.Circle">
        <item name="cornerSize">49dp</item>
    </style>

    <style name="Theme.MarvelCharacters.ImageCarousel">
        <item name="android:layout_marginTop">@dimen/upper_carousel_margin_top</item>
    </style>

    <style name="Theme.MarvelCharacters.ViewPlaceholder">
        <item name="android:background">@color/placeholder_color</item>
    </style>

    <style name="ThemeOverlay.MarvelCharacters.FullscreenContainer" parent="">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="fullscreenBackgroundColor">@color/black</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>